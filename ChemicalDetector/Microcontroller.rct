controller Microcontroller {
	event flag
	event siren
	event lights : Color
	event alarm : Chemical
sref stm_ref0 = Signalling
	connection Microcontroller on flag to stm_ref0 on flag
	connection Microcontroller on siren to stm_ref0 on siren
	connection Microcontroller on lights to stm_ref0 on light
	connection Microcontroller on alarm to stm_ref0 on detect
}